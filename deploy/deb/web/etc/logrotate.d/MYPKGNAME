/var/log/MYPKGNAME.log {
  rotate 8
  weekly
  minage 7
  maxage 120
  maxsize 500M
  minsize 50M
  create 0750 mypkgnameweb mypkgname
  su mypkgnameweb mypkgname
  compress
  missingok
  notifempty
}
